@model JukeBox.Models.Entities.Game
@{
    Layout = "_LayoutLoggedIn";
}
<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>@Model.Name</h3>
                <span class="breadcrumb"><a href="#">Home</a>  >  <a href="#">Shop</a>  >@Model.Name</span>
            </div>
        </div>
    </div>
</div>
<div class="single-product section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="left-image">
                    <img src="~/assets/images/@Model.Image" alt="">
                </div>
            </div>
            <div class="col-lg-6 align-self-center">
                <h4>@Model.Name</h4>
                <span class="price"><em>FREE</em></span>
                <p>
                    At JukeBox, we understand the power of community. Join our thriving gaming community and connect with like-minded players. Share strategies, engage in friendly competition, and make new friends along the way. Our forums and chat rooms provide the perfect platform to unite gamers from around the world.

                    Stay updated with the latest gaming news, reviews, and tips from our team of passionate gamers. We're dedicated to keeping you informed and inspired on your gaming journey.
                </p>
                <form id="qty" action="#">
                    <button type="submit"><i class="fas fa-download"></i>Download</button>
                </form>
                <ul>
                    <li><span>Game ID:</span>@Model.Id</li>
                </ul>
            </div>
            <div class="col-lg-12">
                <div class="sep"></div>
            </div>
        </div>
    </div>
</div>

<div class="more-info">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="tabs-content">
                    <div class="row">
                        <div class="nav-wrapper ">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" aria-controls="description" aria-selected="true">Description</button>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                                <p>@Model.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


