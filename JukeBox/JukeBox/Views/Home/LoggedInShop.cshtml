@model X.PagedList.PagedList<JukeBox.Models.ViewModels.GameCategoryViewModel>
@{
    Layout = "_LayoutLoggedIn";
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Our Shop</h3>
                <span class="breadcrumb"><a href="#">Home</a> > Our Shop</span>
            </div>
        </div>
    </div>
</div>

<div class="section trending">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="pagination">
                    @if (Model.HasPreviousPage)
                    {
                        <li><a href="@Url.Action("Games", new { page = Model.PageNumber - 1 })"> &lt; </a></li>
                    }

                    @for (var i = 1; i <= Model.PageCount; i++)
                    {
                        <li>
                            @if (i == Model.PageNumber)
                            {
                                <a class="is_active" href="javascript:void(0)">@i</a>
                            }
                            else
                            {
                                <a href="@Url.Action("Games", new { page = i })">@i</a>
                            }
                        </li>
                    }

                    @if (Model.HasNextPage)
                    {
                        <li><a href="@Url.Action("Games", new { page = Model.PageNumber + 1 })"> &gt; </a></li>
                    }
                </ul>
            </div>
        </div>
        <br />
        <br />
        <div class="row trending-box">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 align-self-center mb-30 trending-items col-md-6">
                    <div class="item">
                        <div class="thumb">
                            <a href="/Home/Detail/@item.Game.UrlName"><img src="~/assets/images/@item.Game.Image" alt=""></a>
                            <span class="price"><em>Free!</em></span>
                        </div>
                        <div class="down-content">
                            <span class="category">
                                @foreach (var category in item.Categories)
                                {
                                    <span>@category.Name</span>
                                }

                            </span>
                            <h4>@item.Game.Name</h4>
                            <a href="/Home/Detail/@item.Game.UrlName"><i class="fa fa-shopping-bag"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>